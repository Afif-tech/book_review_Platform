<script>
  // Function to set rating and update stars
  function setRating(rating) {
      document.getElementById('rating').value = rating;

      // Update stars display
      updateStars(rating);
  }

  // Function to update the star colors
  function updateStars(rating) {
      const stars = document.querySelectorAll('.stars .fa-star');
      stars.forEach((star, index) => {
          if (index < rating) {
              star.classList.add('checked'); // Highlight star
          } else {
              star.classList.remove('checked'); // Remove highlight
          }
      });
  }

  // On page load, reset stars based on the stored rating
  document.addEventListener('DOMContentLoaded', () => {
      const currentRating = document.getElementById('rating').value || 0;
      updateStars(currentRating);
  });
</script>

<script>
    // Filter Books
    function filterBooks() {
        const filterValue = document.getElementById('filterSelect').value;
        const booksContainer = document.getElementById('booksContainer');
        const books = Array.from(booksContainer.getElementsByClassName('book-item'));

        books.sort((a, b) => {
            const nameA = a.getAttribute('data-name');
            const nameB = b.getAttribute('data-name');
            return filterValue === 'asc' ? nameA.localeCompare(nameB) : nameB.localeCompare(nameA);
        });

        books.forEach(book => booksContainer.appendChild(book));
    }

    // Search Books
    function searchBooks() {
        const searchInput = document.getElementById('searchInput').value.toLowerCase();
        const books = document.getElementsByClassName('book-item');

        Array.from(books).forEach(book => {
            const bookName = book.getAttribute('data-name');
            if (bookName.includes(searchInput)) {
                book.style.display = '';
            } else {
                book.style.display = 'none';
            }
        });
    }
</script>
